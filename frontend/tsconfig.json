{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "esnext",
        "target": "es6",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "baseUrl": "./",
        "rootDir": "./",
        "typeRoots": ["./node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "paths": {
            "~/*": ["src/*"]
        },
        "esModuleInterop": true,
        "importsNotUsedAsValues": "preserve",
        "incremental": true
    },
    "include": ["src"],
    "exclude": ["**/node_modules", "**/.*/"]
}
